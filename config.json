{
  "system": {
    "name": "Smart Frequent Entry System",
    "version": "3.0.0-SmartFreq",
    "mode": "production"
  },
  
  "trading": {
    "symbol": "XAUUSD.v",
    "timeframe": "M1",
    "market_orders_only": true,
    "signal_cooldown_seconds": 20,
    "max_signals_per_hour": 80,
    "max_positions": 50,
    "auto_trading": true,
    "high_frequency_mode": true
  },
  
  "smart_entry_rules": {
    "_comment": "MINI TREND ANALYSIS",
    
    "mini_trend": {
      "enabled": true,
      "lookback_candles": 3,
      "min_trend_candles": 2,
      "min_body_ratio": 0.05,
      "ignore_previous_close": false,
      "trend_strength_weight": 0.4
    },
    
    "portfolio_balance": {
      "enabled": true,
      "target_buy_sell_ratio": 0.5,
      "max_imbalance_ratio": 0.7,
      "balance_adjustment_factor": 1.5,
      "rebalance_threshold": 0.65
    },
    
    "dynamic_lot_sizing": {
      "base_lot": 0.01,
      "min_lot": 0.01, 
      "max_lot": 0.20,
      
      "signal_strength_factor": {
        "enabled": true,
        "min_multiplier": 0.5,
        "max_multiplier": 3.0,
        "strength_sensitivity": 1.2
      },
      
      "trend_strength_factor": {  
        "enabled": true,
        "weak_trend_multiplier": 0.7,
        "strong_trend_multiplier": 1.5,
        "trend_threshold": 0.6
      },
      
      "balance_factor": {
        "enabled": true,  
        "imbalance_boost": 1.3,
        "oversupply_reduction": 0.6
      },
      
      "movement_factor": {
        "enabled": true,
        "min_movement_points": 0.20,
        "max_movement_points": 2.00,
        "movement_multiplier_max": 1.4
      }
    }
  },
  
  "entry_filters": {
    "_comment": "QUALITY FILTERS - ป้องกันมั่วซั่ว",
    
    "price_movement_filter": {
      "enabled": true,
      "min_price_change_points": 0.20,
      "max_price_change_points": 5.00,
      "movement_confirmation": true
    },
    
    "session_activity_filter": {
      "enabled": true,
      "low_activity_reduction": 0.3,
      "high_activity_boost": 1.2,
      "overlap_boost": 1.5
    },
    
    "volatility_filter": {
      "enabled": true,
      "low_volatility_threshold": 0.5,
      "high_volatility_threshold": 3.0,
      "volatility_adjustment": true
    }
  },
  
  "risk_management": {
    "max_positions": 50,
    "max_daily_trades": 100,
    "position_size_limit": 5.0,
    "margin_safety_level": 300.0
  }
}